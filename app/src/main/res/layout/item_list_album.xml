<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/seven_dp"
    android:transitionName="@string/text_art"
    app:cardElevation="@dimen/five_dp">

    <RelativeLayout
        android:id="@+id/lyt_card_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.the111mins.newwidgetsprojects.ui.widget.SquareImageView
            android:id="@+id/image_art"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            tools:src="@drawable/ic_launcher"/>

        <TextView
            android:id="@+id/txt_album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/image_art"
            android:layout_marginBottom="@dimen/fifteen_dp"
            android:layout_marginLeft="@dimen/seven_dp"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:layout_toLeftOf="@+id/btn_overflow"
            android:maxLines="1"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Empty for now"/>

        <ImageButton
            android:id="@+id/btn_overflow"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/image_art"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_overflow_light"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>